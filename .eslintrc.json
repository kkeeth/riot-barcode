{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": 2,
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "func-style": ["error", "declaration"],
    "no-func-assign": "error",
    "no-var": "error"
  },
  "plugins": ["html"],
  "settings": {
    "html/html-extensions": [".html", ".riot"]
  },
  "globals": {
    "props": true,
    "riot": true
  }
}
