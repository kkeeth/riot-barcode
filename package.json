{
  "description": "riot-barcode is a simple barcode generator for riotjs by using JsBarcode library.",
  "version": "0.0.3",
  "author": "kkeeth <zensin0082@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kkeeth/riot-barcode/issues"
  },
  "bin": "bin/riot-barcode.js",
  "homepage": "https://github.com/kkeeth/riot-barcode#readme",
  "keywords": [
    "riot",
    "riotjs",
    "barcode",
    "riot-barcode"
  ],
  "scripts": {
    "cov-html": "nyc report --reporter=html",
    "build": "rollup -c",
    "test": "nyc --require esm --require jsdom-global/register --require ./test/register-riot-extension.js mocha src/**/*.spec.js",
    "start": "npm run watch & npm run server",
    "server": "browser-sync start --files 'bin/*, demo.html, example/*' --server --startPath='demo.html'",
    "prepublishOnly": "npm test",
    "watch": "rollup -c -w 'src/**'",
    "cp:js": "cp bin/riot-barcode.js example",
    "cp:css": "cp assets/css/style.css example",
    "before": "npm run cp:js && npm run cp:css",
    "deploy": "npm run before && gh-pages -d example"
  },
  "dependencies": {
    "canvas": "^2.6.1",
    "jsbarcode": "^3.11.0",
    "riot": "^4.13.4"
  },
  "devDependencies": {
    "@riotjs/compiler": "^4.9.2",
    "@riotjs/hot-reload": "^4.0.1",
    "@riotjs/ssr": "^4.2.1",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "browser-sync": "^2.26.7",
    "chai": "^4.2.0",
    "esm": "^3.2.25",
    "gh-pages": "^3.1.0",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "rollup": "^2.17.1",
    "rollup-plugin-riot": "^4.0.2"
  },
  "name": "riot-barcode",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kkeeth/riot-barcode.git"
  }
}
